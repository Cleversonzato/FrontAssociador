{
    "configurations": [
      {
        "type": "firefox",
        "request": "launch",
        "name": "Firefox",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}",
        "preLaunchTask": "vuejs: start",
        "pathMappings": [
          {
            "url": "webpack:///locales",
            "path": "${workspaceFolder}/locales"
          },
          {
            "url": "webpack:///src",
            "path": "${workspaceFolder}/src"
          }
        ]
      }
    ]
}